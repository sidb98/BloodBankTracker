<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab1ParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".tab1">

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/topRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_edittext"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageBankIcon"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/blood_bank_icon" />

        <TextView
            android:id="@+id/textHospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/imageBankIcon"
            android:text="Hospital Name"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRelativeLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dp">

        <ImageView
            android:id="@+id/imageLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/tagAddress"
            android:layout_marginLeft="15dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/tagAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageLocation"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagAddress"
            android:layout_alignLeft="@id/tagAddress"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/imageLocation"
            android:text=""
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textAddress"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/imagePhone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/textAddress"
            android:layout_alignTop="@+id/tagPhone"
            android:layout_marginLeft="20dp"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/tagPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imagePhone"
            android:text="Phone "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagPhone"
            android:layout_alignLeft="@id/tagPhone"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/phoneToggleButton"
            android:layout_toRightOf="@id/imagePhone"
            android:text=""
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/phoneToggleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tagPhone"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_icon"
            android:textOff=""
            android:textOn="" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagPhone"
            android:layout_alignLeft="@id/tagPhone"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/phoneToggleButton"
            android:background="@drawable/rectangle_edittext_gray"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="5dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/viewPhone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textMobileNo"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/imageEmail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/textMobileNo"
            android:layout_alignTop="@id/tagEmailId"
            android:layout_marginLeft="20dp"
            android:src="@drawable/gmail" />

        <TextView
            android:id="@+id/tagEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textMobileNo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imageEmail"
            android:text="Email "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagEmailId"
            android:layout_alignLeft="@id/tagEmailId"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/emailToggleButton"
            android:layout_toRightOf="@id/imageEmail"
            android:text=""
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/emailToggleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tagEmailId"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_icon"
            android:textOff=""
            android:textOn="" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagEmailId"
            android:layout_alignLeft="@id/tagEmailId"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/emailToggleButton"
            android:background="@drawable/rectangle_edittext_gray"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:visibility="invisible" />


        <View
            android:id="@+id/viewEmail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textEmailId"
            android:layout_margin="10dp"
            android:background="@android:color/black" />



    </RelativeLayout>

</RelativeLayout>